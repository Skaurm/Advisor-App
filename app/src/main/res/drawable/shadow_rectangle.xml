<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient
                        android:startColor="#ff000000"
                        android:centerColor="#ff000000"
                        android:endColor="#00000000"
                        android:angle="270"
                        android:useLevel="false"
                        />
                    <padding
                        android:bottom="10dp"
                        android:left="0dp"
                        android:right="0dp"
                        android:top="0dp" />
                </shape>
            </item>
            <item>
                <shape>
                    <corners
                        android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>